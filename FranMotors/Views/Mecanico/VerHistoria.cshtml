@{
    var moto = (Motocicleta)ViewBag.moto;
}

<center><h4 class="mb-3" style="margin-top:2%;"><i class="fa-regular fa-rectangle-list"></i> Historia de Modificaciones</h4></center>
<center><a class="btn btn-info" href="/mecanico/listmoto?id=@moto.IdCliente"><i class="fa-solid fa-arrow-right-from-bracket"></i> Regrese a su Historial de Motocicletas</a></center>
<br>
@foreach (var item in Model)
{

    <center>
        <div class="card bg-light mb-3" style="max-width: 32rem;">
            <div class="card-header" style="text-align:left;">
                <ul style="list-style: none;">
                    @if (item.Tipo == "Cliente")
                    {
                        <li><p class="btn btn-success float-right" style="width:100px;">@item.Tipo</p></li>
                    }
                    @if (item.Tipo == "Mecanico")
                    {
                        <li><p class="btn btn-danger float-right" style="width:100px;">@item.Tipo</p></li>
                        <li><strong>Precio:</strong> S/. @item.Precio</li>
                    }
                    <li><strong>Fecha de Modificación: </strong>@item.Fecha</li>
                    <li>
                        <u><strong>Detalles de la Modificación</strong></u>
                        <br>
                        @item.Detalle
                    </li>
                    <a style="color:white;" onclick="hist(id = @item.Id, idmoto = @moto.Id, idcliente = @moto.IdCliente)" data-toggle="modal" data-target="#exampleModal4" class="btn btn-dark btn-sm float-right">
                        <i class="fa-solid fa-pencil" aria-hidden="true"></i>
                    </a>
                </ul>
            </div>
        </div>
    </center>

}
<center><a class="btn btn-info" href="/mecanico/listmoto?id=@moto.IdCliente"><i class="fa-solid fa-arrow-right-from-bracket"></i> Regrese a su Historial de Motocicletas</a></center>
<hr class="text-dark" size=4>


<div class="modal fade" id="exampleModal4" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><i class="fa-solid fa-user-pen"></i> Editar Historia</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>
            <div class="modal-body" id="edithistoria">
            </div>
        </div>
    </div>
</div>