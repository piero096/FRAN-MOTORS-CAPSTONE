<link rel="stylesheet" href="~/css/login.css" />
<div class="container">
    <form action="/auth/login" class="formulario" method="post">
        
        <div class="contenedor">
            <h1 class="main-title">Iniciar Sesión</h1>
            <p class="text-danger">@ViewBag.Error</p>
            <p class="text-danger">@ViewBag.Estado</p>
            <div class="input-contendor username">

                <input type="text" class="text-lowercase" name="username" placeholder="USUARIO" />
            </div>
            <div class="input-contendor password">

                <input type="password" name="password" placeholder="Contraseña" />
            </div>
            <div>
                <input type="submit" name="name" value="Iniciar Sesión" class="button" />
            </div>
        </div>
    </form>
</div>